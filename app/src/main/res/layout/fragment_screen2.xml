<?xml version="1.0" encoding="utf-8"?>
<!-- fragment_screen_slide_page.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

        <TextView
            style="?android:textAppearanceMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_margin="15dp"
            android:textSize="@dimen/font_size_main_title"
            android:textColor="@color/purple_textColor"
            android:lineSpacingMultiplier="1.2"
            android:text="@string/connect_phone_and_machine" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="@dimen/font_size_description"
            android:layout_margin="15dp"
            android:lineSpacingMultiplier="1.2"
            android:text="@string/onboarding3_2" />

        <ImageView
            android:id="@+id/img_onboarding"
            android:layout_width="fill_parent"
            android:layout_height="196dp"
            android:background="@drawable/onboarding_2_3x" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:visibility="invisible">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="@dimen/font_size_main_btn"
                    android:lineSpacingMultiplier="1.2"
                    android:text="@string/success_connection" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="@dimen/font_size_main_btn"
                    android:textColor="@color/green_textColor"
                    android:layout_margin="5dp"
                    android:lineSpacingMultiplier="1.2"
                    android:text="@string/success" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_connect_wifi"
            android:layout_width="300dp"
            android:layout_height="64dp"
            android:layout_margin="20dp"
            android:background="@drawable/btn_purple_radius"
            android:text="@string/connect_wifi"
            android:textSize="@dimen/font_size_main_btn"/>


</LinearLayout>