<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".activity.MainActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/background_gradient_purple">

    <Button
        android:id="@+id/btn_backToMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BACK"
        android:layout_gravity="left"/>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:text="@string/btn_login"
            android:textSize="@dimen/font_size_main_title"
            android:textAlignment="center"/>

        <EditText
            android:id="@+id/txt_login_email"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:paddingLeft="25dp"
            android:layout_margin="10dp"
            android:background="@drawable/edittext_background"
            android:text="goll167@gmail.com"
            android:textColorHint="@color/white"
            android:hint="@string/txt_email"
            android:inputType="textEmailAddress"/>

        <EditText
            android:id="@+id/txt_login_pwd"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:paddingLeft="25dp"
            android:background="@drawable/edittext_background"
            android:text="jiho0213"
            android:textColorHint="@color/white"
            android:hint="@string/txt_pwd_hint"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:selectAllOnFocus="true" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:gravity="center">

        <TextView
            android:id="@+id/btn_find_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="@string/btn_pwd_find"
            android:textSize="@dimen/font_size_description"
            android:textAlignment="center"/>

        <Button
            android:id="@+id/btn_login"
            android:layout_width="300dp"
            android:layout_height="64dp"
            android:layout_margin="5dp"
            android:text="@string/btn_login"
            android:textColor="@color/purple_textColor"
            android:textSize="@dimen/font_size_main_btn"
            android:background="@drawable/btn_white_radius"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txt_or"
            android:textSize="@dimen/font_size_description"
            android:textAlignment="center"/>

        <Button
            android:id="@+id/btn_kakao_login"
            android:layout_width="300dp"
            android:layout_height="64dp"
            android:layout_margin="5dp"
            android:text="@string/btn_kakao_login"
            android:textColor="@color/purple_textColor"
            android:textSize="@dimen/font_size_main_btn"
            android:background="@drawable/btn_white_radius"/>

    </LinearLayout>

</LinearLayout>